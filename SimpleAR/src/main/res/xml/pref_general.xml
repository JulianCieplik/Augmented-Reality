<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="Indicates if Camera Calibration should always be done"
        android:title="Redo Calibration" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/D3dwireframe_titles"
        android:entryValues="@array/D3dwireframe_values"
        android:key="3Dframewire"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="3Dframewire to Draw" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
    android:key="homoScale"
    android:defaultValue="1.0"
    android:title="Scalehomography"
    android:summary="The Homography ScaleFactor"
    android:numeric="decimal"
    android:maxLength="4"
    />
    <EditTextPreference
        android:key="Wfh"
        android:defaultValue="1.0"
        android:title="HeightWireframe"
        android:summary="The height ScaleFactor"
        android:numeric="decimal"
        android:maxLength="4"
        />
    <EditTextPreference
        android:key="wscale"
        android:defaultValue="1.0"
        android:title="Width ScaleFactor"
        android:summary="The Width ScaleFactor"
        android:numeric="decimal"
        android:maxLength="4"
        />
    <EditTextPreference
        android:key="solid"
        android:defaultValue="1.0"
        android:title="Solid ScaleFactor"
        android:summary="The Uniform soild ScaleFactor"
        android:numeric="decimal"
        android:maxLength="4"
        />


    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_add_friends_to_messages" />

</PreferenceScreen>
